<!-- book-catalog.hbs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Book Catalog</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap/dist/css/bootstrap.min.css">
</head>
<body>
<div class="container mt-5">
    <h1>Book Catalog</h1>
    <table class="table">
        <thead>
        <tr>
            <th>ISBN</th>
            <th>Title</th>
            <th>Creators</th>
            <th>Description</th>
            <th>Publisher</th>
            <th>Publish Date</th>
            <th>Price</th>
            <th>Length</th>
        </tr>
        </thead>
        <tbody>
        {{#each books}}
            <tr>
                <td>{{ean_isbn13}}</td>
                <td>{{title}}</td>
                <td>{{creators}}</td>
                <td>{{description}}</td>
                <td>{{publisher}}</td>
                <td>{{publishDate}}</td>
                <td>${{price}}</td>
                <td>{{length}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>
